<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="flats-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center;">
</div>
<div class="home-flats">
  <div class="container" id="flats-page">
      <div class="row">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle img-md" %>
    </div>
    <p><%= flat.name %></p>
    <h1><%= flat.description %></h1>
    <p><%= flat.city_name %></p>
        <h3>Book this flat</h3>
          <div class="col-xs-12 col-sm-4 col-sm-offset-4">
            <form action="#">
              <div class="col-xs-6">
                <div class="form-group">
                  <label for="first-name"></label>
                  <input type="first-name" class="form-control" id="first-name" placeholder="Checkin">
                </div>
              </div>
              <div class="col-xs-6">
                <div class="form-group">
                  <label for="last-name"></label>
                  <input type="last-name" class="form-control" id="last-name" placeholder="Checkout">
                </div>
              </div>
              <div class="col-xs-12">
                <div class="form-group">
                <label for="favorite"></label>
                  <select class="form-control" id="favorite" name="recipe">
                    <option value="coco">1 guest</option>
                    <option value="curry">2 guests</option>
                    <option value="curry-coco">3 guests</option>
                  </select>
                </div>
              </div>
              <div class="col-xs-12">
                <div class="form-group">
                  <input type="submit" class="form-control" id="button" value="Book it">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
</div>

